{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "aliases.schema.json",
  "title": "Entity Aliases",
  "type": "object",
  "properties": {
    "entities": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["aliases"],
        "properties": {
          "aliases": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true,
            "minItems": 1
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": { "type": "object" }
  },
  "required": ["entities"],
  "additionalProperties": false
}

